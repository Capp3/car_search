# Car Search - Sample Environment Variables
# Copy this file to .env and update with your values

# API Keys (replace with your actual keys)
API_GEMINI_API_KEY=your_gemini_api_key_here
API_CAR_DATA_API_KEY=your_car_data_api_key_here
API_EDMUNDS_API_KEY=your_edmunds_api_key_here
API_API_NINJAS_KEY=your_api_ninjas_key_here
API_CONSUMER_REPORTS_KEY=your_consumer_reports_key_here
API_JDPOWER_KEY=your_jdpower_key_here
API_OPENAI_API_KEY=your_openai_api_key_here
API_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# To obtain an API Ninjas key, sign up at https://api-ninjas.com/api/cars
# To obtain a Consumer Reports key, sign up at https://rapidapi.com/apidojo/api/consumer-reports
# To obtain a JD Power key, sign up at https://rapidapi.com/jdpower-api/api/vehicle-ratings-and-reviews
# To obtain a Google Gemini key, visit https://ai.google.dev/gemini-api
# To obtain an OpenAI key, visit https://platform.openai.com/api-keys
# To obtain an Anthropic key, visit https://console.anthropic.com/settings/keys

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE_NAME=car_search.log

# UI Settings
UI_THEME=system
UI_FONT_SIZE=12
UI_MAX_RESULTS_PER_PAGE=20

# Search Settings
SEARCH_DEFAULT_RADIUS=50
SEARCH_DEFAULT_MAX_PRICE=10000
SEARCH_REQUEST_DELAY=1.5
SEARCH_CACHE_EXPIRY=3600
SEARCH_USE_TEST_DATA=false
SEARCH_USE_PLAYWRIGHT=true

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SCREENSHOT_ENABLED=true
PLAYWRIGHT_DEBUG_MODE=false
PLAYWRIGHT_TIMEOUT=30
PLAYWRIGHT_SLOW_MO=
PLAYWRIGHT_USER_AGENT=
PLAYWRIGHT_VIEWPORT_WIDTH=1280
PLAYWRIGHT_VIEWPORT_HEIGHT=800

# LLM Settings
LLM_PROVIDER=Google Gemini
LLM_GEMINI_MODEL=gemini-2.5-pro
LLM_OPENAI_MODEL=gpt-4o
LLM_ANTHROPIC_MODEL=claude-3-sonnet
LLM_OLLAMA_HOST=http://localhost:11434
LLM_OLLAMA_MODEL=llama3
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Debug Mode (true/false)
DEBUG=false
